{% extends "PBCamionBundle::layout.html.twig" %}

{% block header %}
    <div id="header" class="well h2 text-center">
        {{ titre }}
    </div>
{% endblock %}

{% block pbcamion_body %}

    {{ include("PBTransportBundle:Transport:form.html.twig") }}
    {% if boutonDel == true and facture.id>0 %}
        <a href="{{ path('pb_camion_deletefacture', {'id': facture.id}) }}" class="btn btn-danger" onclick="return confirm('ATTENTION : êtes vous certain de vouloir supprimer cette facture ? Cette action est irrévocable.');">
            <i class="glyphicon glyphicon-trash"></i>
            Supprimer cette facture
        </a>
    {% endif %}

{% endblock %}
